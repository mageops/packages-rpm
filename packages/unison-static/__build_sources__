#!/bin/sh

set -e -x

_CWD="$(dirname $0)"

docker build "${_CWD}/docker-build/" -t unison-linux-static-build

CID=$(docker create unison-linux-static-build unison-linux-static-build)

rm -f "${_CWD}/unison" "${_CWD}/unison-fsmonitor"

docker cp "$CID:/build/output/unison"           "${_CWD}/unison"
docker cp "$CID:/build/output/unison-fsmonitor" "${_CWD}/unison-fsmonitor"
docker rm "$CID"