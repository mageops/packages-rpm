#!/bin/sh

set -e -x

PWD="$(dirname $0)"

docker build "$(PWD)/docker-build/" -t unison-linux-static-build

CID=$(docker create unison-linux-static-build unison-linux-static-build)

rm -f "$(PWD)/unison" "$(PWD)/unison-fsmonitor"

docker cp "$CID:/build/output/unison"           "$(PWD)/unison"
docker cp "$CID:/build/output/unison-fsmonitor" "$(PWD)/unison-fsmonitor"
docker rm "$CID"